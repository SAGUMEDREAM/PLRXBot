{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
    ]
  },
  "include": [
    "src",
    "src/types/global.d.ts",
    "src/**/*.d.ts",
    "plugins/**/*",
    "plugins/**/*.d.ts"
  ]
}
