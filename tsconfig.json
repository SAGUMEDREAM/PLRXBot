{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",  // 编译输出目录
    "target": "es2022",
    "module": "esnext",
    "declaration": true,  // 继续生成声明文件
    "emitDeclarationOnly": false,  // 禁用只生成声明文件
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src",
    "src/types/global.d.ts",
    "src/**/*.d.ts",
    "plugins/**/*",
    "plugins/**/*.d.ts"
  ]
}
